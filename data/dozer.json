{
    "name": "dozer",
    "id": "com.boostedhuman.robots.dozer",
    "nodes": {
      "dozer_node": {
        "class_name": "dozer_node.DozerNode",
        "dependencies": [
          "rpc_proxy",
          "hardware_service",
          "camera_service",
          "speech_service"
        ]
      },
      "rpc_proxy": {
        "class_name": "rpc_proxy_node.RPCProxyNode",
        "launch_params": {
          "port": 8080
        }
      }
    },

    "services": {
      "hardware_service": {
        "class_name": "hardware_service.HardwareService",
        "launch_params": {
          "stub": false,
          "serial_port": "/dev/ttyACM0",
          "serial_port_speed": 9600,
          "service_port": 9000
        }
      },

      "camera_service": {
        "class_name": "camera_service.CameraService"
      },

      "speech_service": {
        "is_external": true,
        "host": "192.168.1.5",
        "port": 9000
      }

    }
}
